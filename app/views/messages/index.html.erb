<h1>Your Useful SMS Messages</h1>

<table class='table table-striped table-hover table-responsive'>
  <tr>
    <th>Keyword</th>
    <th>Body</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td class="<%= 'danger' if message.keyword.blank? %>"><%= message.keyword %></td>
    <td><%= message.body %></td>
    <td><%= message.description %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= button_to 'Destroy', message, method: 'delete', confirm: 'Are you sure?' %></td>
    <td>
      <%= render "send_sms", message: message%>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Message', new_message_path, remote: true, class: 'btn btn-success' %>
